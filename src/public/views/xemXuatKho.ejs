<!DOCTYPE html>
<head lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="../css/bootstrap.min.css" />
        <link rel="stylesheet" href="../css/styles.css" />
        <title>Xuất kho</title>
    </head>
    <body>
        <div class="container">
            <%- include('header.ejs')%>
            <h1 class="content-title text-center mt-4" ><%= vatTu.tenVatTu %></h1>
            <div class=" row detailVT text-center">
                <div class="col-md-6">
                   <div>
                    <strong>Mã vật tư :</strong>
                    <span class="ml-4"><%= vatTu.mVT %></span>
                   </div>
                    <div>
                        <strong>Khu vực :</strong>
                        <span class="ml-4"><%= vatTu.KhuVuc.tenKhuVuc %></span>
                    </div>
                    <div>
                        <strong>Số lượng còn lại :</strong>
                        <span class="ml-4"><%= vatTu.soLuong %></span>
                    </div>
                </div>
                <div class="col-md-6">
                   <div>
                    <strong>Loại vật tư :</strong>
                    <span class="ml-4"><%= vatTu.LoaiVatTu.tenLoaiVatTu %></span>
                   </div>
                    <div>
                        <strong>Đơn vị tính :</strong>
                        <span class="ml-4"><%= vatTu.donViTinh %></span>
                    </div>
                    <div>
                        <strong>Đơn giá :</strong>
                        <span class="ml-4"><%= vatTu.donGia %></span>
                    </div>
                </div>
            </div>
            <div class="main-content container mt-5 bg-secondary">
                <h1 class="content-title text-center mt-4 mb-4">Lịch sử xuất nhập kho</h1>
                <div class="row d-flex mb-3 justify-content-between">
                    <div class="action">
                        <button  class="btn btn-primary mr-sm-2 ml-3"><a href="/nhapKho/<%-vatTu.mVT %>">Nhập kho</a></button>
                        <button disabled class="btn btn-secondary mr-sm-2">Xuất kho</button>
                     </div>
                        <button class="btn btn-success mr-4"><a href="/exportXuatKho/<%- vatTu.mVT %>">Xuất file</a></button>
                </div>
                <div class="row">
                <div class="col-md-12">
                    <table class="table table-striped text-center">
                        <thead>
                            <th>Nhân Viên</th>
                            <th>Số Lượng</th>
                            <th>Đơn vị tính</th>
                            <th>Đơn giá</th>
                            <th>Ngày tháng</th>
                        </thead>
                        <tbody id="tablecontent">
                            <%
                                xuatKhos.forEach(xuatKho=>{
                                %>
                                    <tr>
                                        <td>
                                            <%= xuatKho.PhieuXuatKho.NguoiXuat.tenNhanVien %>
                                        </td>
                                        <td>
                                            <%= xuatKho.soLuongXuat %>
                                        </td>
                                        <td>
                                            <%= xuatKho.VatTu.donViTinh %>
                                        </td>
                                        <td>
                                            <%= xuatKho.giaNhap %>
                                        </td>
                                        <td>
                                            <%= xuatKho.PhieuXuatKho.NgayXuat%>
                                        </td>
                                    </tr>
                                <%
                            
                            })
                        %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        <script
            src="https://kit.fontawesome.com/0ec6e9d798.js"
            crossorigin="anonymous"></script>
    </body>
</html>
